{
  "name": "maua-esports",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\" \"node twitch-service.cjs\"",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "node backend.cjs",
    "server": "nodemon backend.cjs",
    "client": "vite",
    "test": "cross-env NODE_ENV=test jest --config=package.json --detectOpenHandles",
    "test:unit": "cross-env NODE_ENV=test jest --config=package.json --testPathPattern=tests/unit",
    "test:integration": "cross-env NODE_ENV=test jest --config=package.json --testPathPattern=tests/integration",
    "test:watch": "cross-env NODE_ENV=test jest --config=package.json --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --config=package.json --coverage",
    "test:ci": "cross-env NODE_ENV=test jest --config=package.json --ci --runInBand --coverage",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@azure/msal-browser": "^4.11.1",
    "@azure/msal-react": "^3.0.11",
    "@tailwindcss/vite": "^4.0.14",
    "aos": "^2.3.4",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "framer-motion": "^12.10.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.503.0",
    "mongoose": "^7.0.0",
    "mongoose-unique-validator": "^4.0.1",
    "multer": "^1.4.5-lts.2",
    "path": "^0.12.7",
    "pdfkit": "^0.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-easy-crop": "^5.4.1",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-quill": "^2.0.0",
    "react-router-dom": "^7.3.0",
    "react-tooltip": "^5.28.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "styled-components": "^6.1.16",
    "tailwindcss": "^4.0.14",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.9",
    "sinon": "^20.0.0",
    "supertest": "^7.1.1",
    "vite": "^5.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./tests/setup.cjs"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/client/"
    ],
    "collectCoverageFrom": [
      "backend.cjs",
      "models/**/*.cjs",
      "controllers/**/*.cjs",
      "routes/**/*.cjs"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "clover"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-results",
          "outputName": "junit.xml"
        }
      ]
    ],
    "testMatch": [
      "**/tests/**/*.test.cjs",
      "**/tests/**/*.spec.cjs"
    ],
    "verbose": true
  },
  "main": "backend.cjs",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": ""
}
